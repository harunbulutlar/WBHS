@using MvcApplication2.Models
@using System.Web.Script.Serialization
@{
    var physicianModel = ViewData["Physician"] as PhysicianModel;
    var patientModel = ViewData["Patient"] as PatientModel;
}
<!DOCTYPE html>
<style>
    /*event in day or week view*/
    .dhx_cal_event.patient_event div {
        background-color: #FF9933 !important;
        color: black !important;
    }

    .dhx_cal_event.own_event div {
        background-color: #009966 !important;
        color: black !important;
    }

    .dhx_cal_event.blocker_event div {
        background-color: #9433ff !important;
        color: black !important;
    }

    .dhx_cal_event_line.patient_event div {
        background-color: #FF9933 !important;
        color: black !important;
    }

    .dhx_cal_event_line.own_event div {
        background-color: #009966 !important;
        color: black !important;
    }

    .dhx_cal_event_line.blocker_event div {
        background-color: #9433ff !important;
        color: black !important;
    }

    .dhx_cal_event_clear.patient_event div {
        background-color: #FF9933 !important;
        color: black !important;
    }

    .dhx_cal_event_clear.own_event div {
        background-color: #009966 !important;
        color: black !important;
    }

    .dhx_cal_event_clear.blocker_event div {
        background-color: #9433ff !important;
        color: black !important;
    }
</style>
<style type="text/css" media="screen">
    html, body {
        margin: 0;
        padding: 0;
    }

    /* background color for whole container and it's border*/
    .my_event {
        background-color: #add8e6;
        border: 1px solid #778899;
        overflow: hidden;
    }
    /* disabling default color for select menu */
    .dhx_cal_select_menu.my_event div {
        border: 0;
        background-color: transparent;
        color: black;
    }
    /* styles for event content */
    .dhx_cal_event.my_event .my_event_body {
        padding-top: 3px;
        padding-left: 5px;
    }
    /* event's date information */
    .my_event .event_date {
        font-weight: bold;
        padding-right: 5px;
    }
    /* event's resizing section */
    .my_event_resize {
        height: 3px;
        position: absolute;
        bottom: -1px;
    }
    /* event's move section */
    .my_event_move {
        position: absolute;
        top: 0;
        height: 10px;
        cursor: pointer;
    }
</style>
<html>
<head>
    <title>DHXScheduler initialization sample</title>

    <link href="~/Content/dhtmlxScheduler/dhtmlxscheduler-responsive.css" rel="stylesheet" />
    <script src="~/Scripts/dhtmlxScheduler/dhtmlxscheduler-responsive.js"></script>
    <script src="@Url.Content("~/Scripts/dhtmlxScheduler/custom_calendar.js")" ></script>
</head>

<body>
    <script>
        window.app.currentUserName = "@patientModel.Name";
        window.app.currentUserLastName = "@patientModel.Surname";    
    </script>
    <div style="height: 700px; width: 100%; margin: 0 auto">
        <h2>Doctor @physicianModel.Name 's Schedule</h2>

        @Html.Raw(Model.Render())
    </div>

</body>

</html>

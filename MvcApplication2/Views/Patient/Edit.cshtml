@using Resources
@model MvcApplication2.Models.PatientModel

@{
    ViewBag.Title = Resource.Edit;
    ViewData["StaffReadOnly"] = new {};
}

<h2> @Resource.Edit</h2>

@using (Html.BeginForm("Edit", "Patient", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.UserId)
    @Html.HiddenFor(model=>model.AccountType)
    @Html.HiddenFor(model=>model.Photo)

    <fieldset>
        <legend>@Resource.PatientModel</legend>
        @Html.Partial("_PatientDetailsPartial")
        <div class="editor-label">
            
            @Resources.Resource.PhotoInternal
            @Html.TextBoxFor(m => m.PhotoInternal, new { type = "file" })
        </div>
        <p>
            <input type="submit" value='@Resources.Resource.Save' />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Resources.Resource.BacktoList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
